[flake8]
max-line-length = 88
max-complexity = 42
ignore =
  D100
  D101
  D102
  D103
  D104
  D105
  D106
  D107
  D403
  D412
  W503
  D205
  D400
  S404
  S603
  D401
  S101
  F401
  F811
  W503

per-file-ignores =
  *tests/*:D205,D400,D401,S101,S106,E501,E731
  */migrations/*:E501
  */settings.py:F403,F405
  */settings/*:F403,F405
  */compat.py:F401
